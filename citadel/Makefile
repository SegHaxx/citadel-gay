# config.mk is generated by ./configure
include config.mk

citserver: server/*.c server/modules/*/*.c config.mk
	cc ${CFLAGS} \
		server/*.c server/modules/*/*.c \
		${LDFLAGS} -lresolv -lcitadel -lpthread -lz -lical -lldap -lcrypt -lexpat -lcurl -ldb \
		-o citserver

config.mk: configure
	./configure
